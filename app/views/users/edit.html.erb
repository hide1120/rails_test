<h1 class="mb-3">ユーザー登録を編集する</h1>
<% @user.errors.full_messages.each do | message | %>
<div class="text-danger">
<%= message %>
</div>
<% end %>
<%= form_tag("/users/#{@user.id}/update",{multipart: true}) do %>
<div class="form-row">
  <div class="form-group col-12 col-md-4">
    <label for="user-name">ユーザー名</label>
    <input value="<%= @user.name %>" name="name" type="text" class="form-control" id="user-name" placeholder="ユーザー名を入力してください">
  </div>
  <div class="form-group col-12 col-md-4">
    <label for="user-name">画像</label>
      <div class="custom-file">
        <input type="file" name="image" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
      </div>

  </div>
  <div class="form-group col-12 col-md-4">
    <label for="mail-address">メールアドレス</label>
    <input value="<%= @user.email %>" name="email" type="email" class="form-control" id="mail-address" placeholder="name@example.com">
  </div>
</div>

<hr>
<button type="submit" class="btn btn-primary">更新する</button>
<% end %>
