<h1 class="mb-3">新規登録</h1>
<%= form_tag("/users/create") do %>
<div class="mb-3">
<% @user.errors.full_messages.each do | message | %>
<div class="text-danger">
<%= message %>
</div>
<% end %>
</div>
<div class="form-row">
  <div class="form-group col-12 col-md-6">
    <label for="user-name">ユーザー名</label>
    <input name="name" type="text" class="form-control" id="user-name" placeholder="ユーザー名を入力してください">
  </div>
  <div class="form-group col-12 col-md-6">
    <label for="mail-address">メールアドレス</label>
    <input name="email" type="email" class="form-control" id="mail-address" placeholder="name@example.com">
  </div>
</div>
<hr>
<button type="submit" class="btn btn-primary">新規登録する</button>
<% end %>
